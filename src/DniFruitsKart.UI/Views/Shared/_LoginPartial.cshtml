@using Microsoft.AspNetCore.Identity
@using DniFruitsKart.UI.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account"
          asp-action="LogOff" method="post"
          id="logoutForm" class="nav navbar-nav ml-auto">
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
                <a asp-area="" class="nav-link"
                   asp-controller="Manage"
                   asp-action="Index"
                   title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                @*<a class="nav-link btn-link" style="cursor:pointer"
                        asp-action="LogOff" asp-controller="Account">
                        Log off
                    </a>*@
                <button type="submit" style="color:white;" class="nav-link btn btn-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav ml-auto">
        <li class="nav-link"><a asp-area="" lass="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
        <li class="nav-link"><a asp-area="" lass="nav-link" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
