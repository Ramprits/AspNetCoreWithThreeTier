@model DniFruitsKart.UI.AdventureWorks.Employee

@{
    ViewData["Title"] = "Create";
}

<h5 class="well-sm">Create New Employee</h5>

<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <form asp-action="Create" class="form-horizontal">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="BirthDate" class="form-control date-picker" placeholder="Please enter Date Birth" />
                    <span asp-validation-for="BirthDate" class="text-danger" />
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="checkbox col-md-3">
                            <input type="checkbox" name="checkbox" asp-for="CurrentFlag"
                                   class="bootstrap-switch"
                                   data-on-label="ON"
                                   data-off-label="OFF" />
                        </div>
                        <div class="dropdown col-md-4">
                            <a href="#pablo" class="btn btn-info dropdown-toggle" data-toggle="dropdown" id="navbarDropdownMenuLink1">
                                Select Gender
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink1">
                                <li><a class="dropdown-item" value="Male">Male</a></li>
                                <li> <a class="dropdown-item" value="Female">Female</a> </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                </div>
                <div class="form-group">

                    <input asp-for="HireDate" class="form-control date-picker" placeholder="Hire Date" />
                    <span asp-validation-for="HireDate" class="text-danger" />
                </div>
                <div class="form-group">

                    <input asp-for="JobTitle" class="form-control" placeholder="Job Title" />
                    <span asp-validation-for="JobTitle" class="text-danger" />
                </div>
                <div class="form-group">

                    <input asp-for="LoginId" class="form-control" placeholder="Login " />
                    <span asp-validation-for="LoginId" class="text-danger" />
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-info btn-round" />
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-2">
        <!-- Button trigger modal -->
        <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            Launch demo modal
        </button>

        <!-- Modal Core -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
             aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        @await Component.InvokeAsync("InventoryWidget")
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-info btn-simple">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
@section extra{
    <p>Create your new Employee here...</p>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
